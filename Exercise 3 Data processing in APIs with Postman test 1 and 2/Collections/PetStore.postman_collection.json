		{
			"name": "Get Pet sold",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Obtener una respuesta correctamente\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"\r",
							"// Obtener el JSON de la respuesta\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"// Crear un array para almacenar las mascotas vendidas\r",
							"var soldPets = [];\r",
							"\r",
							"// Recorrer el JSON para buscar las mascotas vendidas\r",
							"for (var i = 0; i < jsonData.length; i++) {\r",
							"    if (jsonData[i].status == \"sold\") {\r",
							"        // Almacenar la tupla {id, name} en el array\r",
							"        var petTuple = {\r",
							"            id: jsonData[i].id,\r",
							"            name: jsonData[i].name\r",
							"        };\r",
							"        soldPets.push(petTuple);\r",
							"    }\r",
							"}\r",
							"\r",
							"// Imprimir los nombres de las mascotas vendidas en formato {id, name}\r",
							"var output = \"\";\r",
							"for (var i = 0; i < soldPets.length; i++) {\r",
							"    output += \"{\" + soldPets[i].id + \", \" + soldPets[i].name + \"}\";\r",
							"    if (i < soldPets.length - 1) {\r",
							"        output += \", \";\r",
							"    }\r",
							"}\r",
							"pm.test(output);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"status\": \"sold\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
